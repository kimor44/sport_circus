<div class="container">
  <h1>Sport Circus</h1>
  <div>
    <%= @sportShows.each do |show| %>
      <div>
        <h2><%= show.name %></h2>
        <p>
          <%= show.description %>
          <img src="<%= show.picture %>" alt="">
          <strong>Lieu :</strong> <%= show.location %>
        </p>
      </div>
    <% end %>
  </div>
</div>