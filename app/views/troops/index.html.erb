<p id="notice"><%= notice %></p>

<h1>Troops</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Picture</th>
      <th>Description</th>
      <th>Slug</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @troops.each do |troop| %>
      <tr>
        <td><%= troop.name %></td>
        <td><%= troop.picture %></td>
        <td><%= troop.description %></td>
        <td><%= troop.slug %></td>
        <td><%= link_to 'Show', troop %></td>
        <td><%= link_to 'Edit', edit_troop_path(troop) %></td>
        <td><%= link_to 'Destroy', troop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Troop', new_troop_path %>
