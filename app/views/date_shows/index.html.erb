<p id="notice"><%= notice %></p>

<h1>Date Shows</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Date</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @date_shows.each do |date_show| %>
      <tr>
        <td scope="row"><%= date_show.date %></td>
        <td scope="row"><%= date_show.sport_show.name %></td>
        <td><%= link_to 'Show', date_show %></td>
        <td><%= link_to 'Edit', edit_date_show_path(date_show) %></td>
        <td><%= link_to 'Destroy', date_show, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

